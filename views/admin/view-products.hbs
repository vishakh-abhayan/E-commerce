<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-products"><button
          style="float: right;"
          class="btn btn-success"
        >Add Products</button></a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th>Image</th>
          <th>Settings</th>
        </tr>
      </thead>
      <tbody>
        {{#each product}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Description}}</td>
            <td><img
                style="width: 50px;height: 50px;"
                src="/product-images/{{this._id}}.jpg"
                alt=""
              /></td>
            <td>
              <a
                href="/admin/edit-product/{{this._id}}"
                class="btn btn-secondary"
              >Edit</a>
              <a 
                href="/admin/delete-product/{{this._id}}" 
                class="btn btn-danger" 
                onclick="return confirm('Are you want to delete {{this.Name}} ?');">
                Delete</a>
              </td>
              </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
